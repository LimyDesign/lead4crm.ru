									h3 Старт
								.price
									span.price-main 0,98 #[span.month: i.fa.fa-rub]
									span.price-additional за каждую компанию
								ul.item-list
									li Стоимость пакета — 2000 #[i.fa.fa-rub]
								a(href="/cabinet/start").btn.btn-default.rounded подключить
							.plan.recommended
								.head
									h3 Компания
								.price
									span.price-main 0,65 #[span.month: i.fa.fa-rub]
									span.price-additional за каждую компанию
								ul.item-list
									li Стоимость пакета — 10&nbsp;000 #[i.fa.fa-rub]
								a(href="/cabinet/company").btn.btn-default.rounded подключить
							.plan
								.head
									h3 Корпорация
