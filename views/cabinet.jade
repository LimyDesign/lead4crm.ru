mixin unlink_button(href, name, soc_id, color)
	a(href=href, class!='btn btn-block active ' + color) #{name} &nbsp;
		span.label.label-success #{soc_id}

mixin link_button(href, name, color)
	a(href=href, class!='btn btn-block ' + color)= name

doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(type='text/css', rel='stylesheet', href='/css/bootstrap.css')
		link(type='text/css', rel='stylesheet', href='/css/modal.css')
		link(type='text/css', rel='stylesheet', href='/fonts/font-awesome-4.3.0/css/font-awesome.min.css')
		link(type='text/css', rel='stylesheet', href='/css/all.css')
		link(href='http://fonts.googleapis.com/css?family=Roboto:400,400italic,700,300,500&subset=latin,cyrillic', 
			rel='stylesheet',
			type='text/css')
		title=title
		<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		script(src="js/modernizr.custom.js")
	body
		#wrapper
			header#header
				.container
					.logo: a(href=mainpage_url): img(src="images/logo.svg")
					nav#nav
						.opener-holder
							a(href="#").nav-opener: span
						a(href="/logout").btn.btn-primary.rounded Выход
						.nav-drop
							ul
								li.visible-sm.visible-xs: a(href=mainpage_url) Главная
								li Баланс: #[span 0] #[i.fa.fa-rub]
								li Тарифный план: #[span Демо]
							.drop-holder.visible-sm.visible-xs
								span Следите
								ul.social-networks
									li: a(href="#").fa.fa-github
									li: a(href="#").fa.fa-twitter
									li: a(href="#").fa.fa-facebook
			section.visual-other
				.container
					.text-block
						.heading-holder: h1 Личный кабинет
			section.area
				.container
					.row
						.col-md-12
							h2 Добрый день!
							p. 
								Здесь храняться данные о вашей учетной записи, привязанных социальных профилях, 
								текущем остатке на лицевом счету и текущий тарифный план. Остальное вы найдете 
								непосредственной в самой CRM. Мы постарались сделать все очень очень простым, но
								тем не менее, если вдруг у Вас возникнут вопросы, позвоните нам и мы проконсультируем
								вас.
					.row
						.col-md-6
							h3 Ваши социальные аккаунты
							p.
								Через эти социальные аккаунты вы сможете входить в свой личный кабинет. Если вы впервые
								авторизовались и у вас несколько аккаунтов, мы рекомендуем подключить все, для
								занчительного упрощения при следующих авторизациях, в том числе чтобы в следующий раз
								заходя на наш сайт вы смогли попасть в свой старый аккаунт, а не создать новый, где
								снова придется вносить деньги на баланс и снова придется менять параметры в вашей CRM.
						.col-md-6
							h4 Не привязанные аккаунты
							if !fb_id
								+link_button('/fblink', 'Привязать аккаунт Facebook', 'btn-fb-color')
							
							if !vk_id
								+link_button('/vklink', 'Привязать аккаунт Вконтакте', 'btn-vk-color')

							if !gp_id
								+link_button('/gplink', 'Привязать аккаунт Google+', 'btn-google-plus-color')

							if !ok_id
								+link_button('/oklink', 'Привязать аккаунт Одноклассники', 'btn-ok-color')

							if !mr_id
								+link_button('/mrlink', 'Привязать аккаунт Mail.Ru', 'btn-mailru-color')
							
							if !ya_id
								+link_button('/yalink', 'Привязать аккаунт Яндекс', 'btn-ya-color')
							h4 Привязанные аккаунты
							if fb_id
								+unlink_button('/fbunlink', 'Отвязать аккаунт Facebook', fb_id, 'btn-fb-color')
							
							if vk_id
								+unlink_button('/vkunlink', 'Отвязать аккаунт Вконтакте', vk_id, 'btn-vk-color')

							if gp_id
								+unlink_button('/gpunlink', 'Отвязать аккаунт Google+', gp_id, 'btn-google-plus-color')

							if ok_id
								+unlink_button('/okunlink', 'Отвязать аккаунт Одноклассники', ok_id, 'btn-ok-color')

							if mr_id
								+unlink_button('/mrunlink', 'Отвязать аккаунт Mail.Ru', mr_id, 'btn-mailru-color')
							
							if ya_id
								+unlink_button('/yaunlink', 'Отвязать аккаунт Яндекс', ya_id, 'btn-ya-color')
					.row
						.col-md-6
							h3 Ключ доступа
							p.
								Это ваш ключ доступа к нашей системе, для того, чтобы модуль начал работать необходимо
								ввести этот ключ в настройках нашего модуля. Во время установки вы явно видели форму,
								где необходимо было это сделать.

			section.area
				.container
					.subscribe
						h3 Ваш адрес электропочты
						form.form-inline
							button(type="button").btn.btn-primary.rounded Изменить
							.form-group
								input(type="email", placeholder="Электропочта", value=user_email).form-control.rounded
							
			footer#footer
				.container
					.footer-holder
						.row
							.col-md-4
								.logo
									a(href=mainpage_url): img(src="images/logo.svg", alt="LEAD4CRM")
								p Смарт генератор лидов для CRM Битрикс24. Работает на базе справочника 2GIS.
							.col-md-2
								h4 Навигация
								ul
									li: a(href=mainpage_url) Главная
									li: a(href="#.") О проекте
									li: a(href="#.") О нас
									li: a(href="#.") Цены
									li: a(href="#.") Поддержка
							.col-md-3
								.text-holder
									strong.phone: a(href="tel:+79041326000") +7 (499) 704-69-17
									span.available Работаем всегда &mdash; 24/7
									h4 Сделано в России
									address Произведено в #[a(href="http://limydesign.ru", target="_blank") LimyDesign]
							.col-md-3
								.text-frame
									h4 С сведению
									p.
										Наши данные актуальны на столько на сколько актуальны данные в справочнике 2GIS 
										потому, что мы не кэшируем и не сохраняем.

		script(src="/js/jquery-1.11.2.min.js")
		script(src="/js/bootstrap.js")
		script(src="/js/jquery.main.js")

		script(src="/js/classie.js")
		script(src="/js/modalEffects.js")
		script.
			var polyfilter_scriptpath = '/js/';
		script(src="/js/cssParser.js")
		script(src="/js/css-filters-polyfill.js")